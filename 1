    const buttons=document.querySelectorAll('.lang button');
    const blocks=document.querySelectorAll('[data-lang]');
    function setLang(l){blocks.forEach(b=>b.classList.toggle('active',b.getAttribute('data-lang')===l));buttons.forEach(btn=>btn.classList.toggle('active',btn.getAttribute('data-switch')===l));document.documentElement.lang=l==='ar'?'ar':(l==='en'?'en':'ru');document.documentElement.dir=l==='ar'?'rtl':'ltr';localStorage.setItem('site_lang',l);}
    buttons.forEach(btn=>btn.addEventListener('click',()=>setLang(btn.getAttribute('data-switch'))));
    setLang(localStorage.getItem('site_lang')||'ru');
    document.getElementById('y').textContent=new Date().getFullYear();
